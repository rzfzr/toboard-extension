{
    "name": "toboard",
    "description": "Alternative client for quick switching entries with toggl's API",
    "version": "0.0.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*.api.track.toggl.com/*"
    ],
    "chrome_url_overrides": {
        "newtab": "newTab.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}